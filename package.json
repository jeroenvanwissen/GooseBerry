{
	"name": "gooseberry",
	"version": "0.0.1",
	"license": "MIT",
	"main": "main/index.js",
	"author": {
		"name": "Jeroen van Wissen"
	},
	"description": "GooseBerry - Twitch Streamer Companion App",
	"repository": {
		"url": "https://github.com/jeroenvanwissen/GooseBerry.git"
	},
	"productName": "GooseBerry",
	"scripts": {
		"dev": "concurrently \"yarn dev:vite\" \" yarn dev:electron\"",
		"dev:vite": "vite",
		"dev:electron": "npm run build:electron && electron .",
		"build": "npm run build:vite && npm run build:electron",
		"build:vite": "vite build",
		"build:electron": "tsc -p electron",
		"dist": "npm run build && electron-builder",
		"pack": "npm run build && electron-builder --dir",
		"clean": "rimraf dist main src/out",
		"type-check": "tsc",
		"lint": "eslint . --ext js,jsx,ts,tsx",
		"lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
	},
	"dependencies": {
		"@vitejs/plugin-react": "^4.2.1",
		"bonjour": "^3.5.0",
		"bonjour-service": "^1.2.1",
		"comfy.js": "^1.1.16",
		"express": "^4.18.2",
		"glob": "^10.3.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.21.2",
		"tailwindcss": "^3.4.1",
		"vite": "^5.0.11"
	},
	"devDependencies": {
		"@fastone/eslint-config": "^1.0.12",
		"@types/bonjour": "^3.5.13",
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.0",
		"@types/react": "^18.2.47",
		"@types/react-dom": "^18.2.18",
		"autoprefixer": "^10.4.16",
		"concurrently": "^8.2.2",
		"electron": "^28.1.3",
		"electron-builder": "^24.9.1",
		"postcss": "^8.4.33",
		"typescript": "^5.3.3"
	},
	"build": {
		"appId": "nl.public-void.gooseberry",
		"productName": "GooseBerry",
		"mac": {
			"category": "public.app-category.utilities",
			"icon": "resources/icon.icns"
		},
		"win": {
			"target": "nsis",
			"icon": "resources/icon.png"
		},
		"asar": true,
		"files": [
			"resources",
			"main",
			"src/out"
		],
		"directories": {
			"buildResources": "resources"
		}
	}
}
